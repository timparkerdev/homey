<%= render "shared/title", title: @project.name do %>
  <%= link_to "Edit", edit_project_path(@project), class: 'inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50'%>
<% end %>

<div>
  <div class="px-4 sm:px-0">
    <p class="mt-1 max-w-2xl text-sm/6 text-gray-500"><%= @project.description %></p>
  </div>
  <div class="mt-6 border-t border-gray-100">
    <dl class="divide-y divide-gray-100">
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm/6 font-medium text-gray-900">Status</dt>
        <dd class="mt-1 text-sm/6 text-gray-700 sm:col-span-2 sm:mt-0"><%= render 'shared/label', name: @project.status.name, color: @project.status.color %></dd>
      </div>
      <div class="px-4 py-6 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
        <dt class="text-sm/6 font-medium text-gray-900">About</dt>
        <dd class="mt-1 text-sm/6 text-gray-700 sm:col-span-2 sm:mt-0"><%= @project.description %></dd>
      </div>
    </dl>
  </div>
</div>

<div class="mt-6 max-w-1/2">
  <h3 class="text-xl font-bold text-gray-600 sm:truncate sm:text-xl sm:tracking-tight pb-6">Conversation</h3>
  <%= render "feed" %>
</div>