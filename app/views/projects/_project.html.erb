<tr>
  <td class="whitespace-nowrap py-5 text-sm text-gray-500">
    <div class="text-gray-900"><%= project.name %></div>
  </td>
  <td class="whitespace-nowrap py-5   text-sm sm:pl-0">
    <div class="flex items-center">
      <div class="ml-4">
        <div class="mt-1 text-gray-500"><%= project.description %></div>
      </div>
    </div>
  </td>
  <td class="whitespace-nowrap px-3 py-5 text-sm text-gray-500">
    <%= render 'shared/label', name: project.status.name, color: project.status.color %>
  </td>
  <td class="relative whitespace-nowrap py-5 pl-3 pr-4 text-right text-sm font-medium sm:pr-0">
    <%= link_to "Edit", project, class: "text-indigo-600 hover:text-indigo-900" %>
  </td>
</tr>